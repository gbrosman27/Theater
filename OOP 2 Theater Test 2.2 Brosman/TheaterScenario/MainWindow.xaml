<Window x:Name="window" x:Class="TheaterScenario.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Object-Oriented Programming 2: Theater" Height="350" Width="450" Loaded="window_Loaded">
    <Grid>
        <ListBox x:Name="movieListBox" HorizontalAlignment="Left" Height="187" Margin="10,79,0,0" VerticalAlignment="Top" Width="190" Loaded="movieListBox_Loaded"/>
        <ListBox x:Name="guestListBox" HorizontalAlignment="Left" Height="187" Margin="234,79,0,0" VerticalAlignment="Top" Width="190" Loaded="guestListBox_Loaded"/>
        <Label x:Name="movieLabel" Content="Movies" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top"/>
        <Label x:Name="guestLabel" Content="Guests" HorizontalAlignment="Left" Margin="234,48,0,0" VerticalAlignment="Top"/>
        <Button x:Name="addMovieButton" Content="Add Movie" HorizontalAlignment="Left" Margin="10,277,0,0" VerticalAlignment="Top" Width="75" Click="addMovieButton_Click"/>
        <Button x:Name="addGuestButton" Content="Add Guest" HorizontalAlignment="Left" Margin="234,277,0,0" VerticalAlignment="Top" Width="75" Click="addGuestButton_Click"/>
    </Grid>
</Window>
